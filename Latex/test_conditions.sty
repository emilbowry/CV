
\newcommand{\setattr}[1]{%
  \expandafter\def\csname doc@attr@#1\endcsname{}%
}
\newcommand{\unsetattr}[1]{%
  \expandafter\let\csname doc@attr@#1\endcsname\relax
}
\newcommand{\ifattr}[3]{%
  \ifcsname doc@attr@#1\endcsname
    #2%
  \else
    #3%
  \fi
}

\newcommand{\ifnot}[3]{%
  #1{#3}{#2}%
}

\newcommand{\ifand}[4]{%
  #1{%
    #2{#3}{#4}%
  }{%
    #4%
  }%
}

\newcommand{\ifor}[4]{%
  #1{%
    #3%
  }{%
    #2{#3}{#4}%
  }%
}
